<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- advance salary rule -->
        <record id="hr_structure_worker_002" model="hr.payroll.structure">
            <field name="name">Worker Pay</field>
            <field name="code">BASIC1</field>
<!--             <field name="type_id" ref="hr_contract.structure_type_worker"/> -->
            <field name="country_id" eval="False"/>
        </record>
        
        <record id="hr_payslip_rule_advance" model="hr.salary.rule">
            <field name="code">SAR</field>
            <field name="name">Advance Salary</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="amount_select">code</field>
            <field name="struct_id" ref="hr_structure_worker_002"/>
            <field name="amount_python_compute">result = inputs.SAR and - (inputs.SAR.amount)</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="sequence" eval="190"/>
        </record>

        <record id="hr_rule_input_advance" model="hr.contract.advantage.template">
            <field name="code">SAR</field>
            <field name="name">Salary Advance</field>
        </record>
        <!-- salary structure -->
        <record model="ir.ui.view" id="model_hr_contract_form">
            <field name="name">hr.contract.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='salary_and_advantages']" position="after">
                    <group>
                    <group string="Advance Salary">
                    <field name="max_percent" string="Max.Salary Advance Percentage"/>
                    <field name="advance_date" string="Salary Advance-After days"/>
                    </group>
                    <group>
                    </group> 
                    </group>    
                </xpath>
            </field>
        </record>
    </data>
</odoo>
